<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="corseCard" prefHeight="167.0" prefWidth="239.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.moodle.ExamCard">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="167.0" prefWidth="245.0" style="-fx-background-color: #1E90FF;">
         <children>
            <Label fx:id="name" alignment="CENTER" prefHeight="60.0" prefWidth="150.0" text="exam name">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="course" alignment="TOP_CENTER" minWidth="-Infinity" prefHeight="32.0" prefWidth="135.0" style="-fx-background-color: #1E90FF;" text="course:" textAlignment="CENTER" VBox.vgrow="SOMETIMES">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="Khmer OS System" size="16.0" />
               </font>
            </Label>
            <FlowPane alignment="CENTER" prefHeight="65.0" prefWidth="260.0">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <children>
                  <Button fx:id="start" mnemonicParsing="false" onAction="#navigateExaming" prefHeight="30.0" prefWidth="80.0" style="-fx-background-color: green;" text="start">
                      <ellipsisString>%key.unspecified</ellipsisString>
                      <cursor>
                        <Cursor fx:constant="DEFAULT" />
                     </cursor>
                  </Button>
               </children>
            </FlowPane>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
