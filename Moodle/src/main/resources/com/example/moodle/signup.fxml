<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Bloom?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="backgroundColor" stylesheets="@application.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.moodle.Signup">
   <children>
      <TextField fx:id="nameField" layoutX="44.0" layoutY="90.0" prefHeight="28.0" prefWidth="150.0" promptText="Name">
         <font>
            <Font name="Times New Roman" size="12.0" />
         </font>
         <effect>
            <DropShadow />
         </effect></TextField>
      <Label layoutX="136.0" prefHeight="78.0" prefWidth="328.0" text="Black Moodle Sign up" textAlignment="CENTER" textFill="#666060" textOverrun="CLIP" wrapText="true">
         <font>
            <Font name="Times New Roman Bold" size="34.0" />
         </font>
         <effect>
            <Glow level="0.43">
               <input>
                  <Bloom />
               </input>
            </Glow>
         </effect></Label>
      <TextField fx:id="usernameField" layoutX="44.0" layoutY="172.0" prefHeight="28.0" prefWidth="150.0" promptText="Username">
         <font>
            <Font name="Times New Roman" size="12.0" />
         </font>
         <effect>
            <DropShadow />
         </effect></TextField>
      <TextField fx:id="lastNameField" layoutX="44.0" layoutY="129.0" prefHeight="28.0" prefWidth="150.0" promptText="Lastname">
         <font>
            <Font name="Times New Roman" size="12.0" />
         </font>
         <effect>
            <DropShadow />
         </effect></TextField>
      <TextField fx:id="passwordField" layoutX="44.0" layoutY="214.0" prefHeight="28.0" prefWidth="150.0" promptText="Password">
         <font>
            <Font name="Times New Roman" size="12.0" />
         </font>
         <effect>
            <DropShadow />
         </effect></TextField>
      <TextField fx:id="emailField" layoutX="44.0" layoutY="254.0" prefHeight="28.0" prefWidth="150.0" promptText="Email(Optional)">
         <effect>
            <DropShadow />
         </effect></TextField>
      <Button fx:id="signupButton" layoutX="413.0" layoutY="311.0" mnemonicParsing="false" onAction="#handleSignupButtonAction" prefHeight="26.0" prefWidth="126.0" style="-fx-background-radius: 17px; -fx-background-color: #0f1547; -fx-cursor: hand;" stylesheets="@SignUp.css" text="Sign up" textFill="WHITE">
         <font>
            <Font name="Times New Roman Bold" size="17.0" />
         </font>
         <effect>
            <DropShadow />
         </effect>
      </Button>
      <ComboBox fx:id="comboboxg" layoutX="46.0" layoutY="316.0" prefHeight="26.0" prefWidth="93.0" style="-fx-background-color: #0f1547;">
         <effect>
            <DropShadow>
               <input>
                  <Glow />
               </input>
            </DropShadow>
         </effect></ComboBox>
      <Label layoutX="50.0" layoutY="298.0" prefHeight="18.0" prefWidth="43.0" text="Gender" textFill="WHITE">
         <font>
            <Font name="Times New Roman" size="14.0" />
         </font>
      </Label>
      <ImageView fitHeight="206.0" fitWidth="202.0" layoutX="367.0" layoutY="78.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../icon.png" />
         </image>
      </ImageView>
      <Button fx:id="Back" layoutX="18.0" layoutY="14.0" mnemonicParsing="false" onAction="#navigateToLogin" prefHeight="18.0" prefWidth="52.0" text="Back" />
   </children>
</AnchorPane>
